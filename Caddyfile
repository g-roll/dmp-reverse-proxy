{
    # Global options
    admin off
    auto_https disable_redirects
    storage file_system {
        root /data
    }

    # On-Demand TLS in v2 ist einfacher
    on_demand_tls {
        # Optional: Erlaubte Domains einschränken
        ask http://localhost:5000/verify
    }
}

# Catch-all für ALLE Domains
:80, :443 {
    reverse_proxy {host}:80
    tls {
        on_demand
    }
} 