{
    # Minimale Grundkonfiguration
    admin off  # Deaktiviere Admin API für maximale Sicherheit
    storage file_system {
        root /data
    }
}

# Catch-all Handler für automatisches SSL
:443 {
    tls {
        on_demand
    }
    
    # Reverse Proxy Beispiel (später anzupassen)
    reverse_proxy {
        to localhost:8080
        header_up Host {upstream_hostport}
    }
} 