{
    # Admin API deaktivieren f端r Sicherheit
    admin off
    
    debug

    # Storage f端r SSL Zertifikate
    storage file_system {
        root /data
    }

    # On-demand TLS f端r dynamische Domains
    on_demand_tls {
        ask http://verify:5000/verify
    }
}

# Einfach die Domain/Host-Definition ohne Port
{$DOMAIN:*} {
    tls {
        on_demand    # Explizit on_demand f端r diese Domain aktivieren
    }
    
    reverse_proxy {$SERVICE_NAME:localhost}:{$PORT:80}
}
